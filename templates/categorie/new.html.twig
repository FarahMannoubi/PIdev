{% extends 'base.html.twig' %}
{% block body %}


<!-- /.card -->
            <!-- Horizontal Form -->
            <div class="card card-info"   style="margin-left:20%;width:70%;margin-right:18%;margin-top:5%"   >
                <div class="card-header">
                  <h3 class="card-title">Ajouter Une Catégorie</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form class="form-horizontal">
                  <div class="card-body ">
                    <div class="form-group row">
                      <label for="form.name" class="col-sm-2 col-form-label">Nom Catégorie</label>
                      <div class="col-sm-10">
                        {{form_start(form)}}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'},'attr': {'placeholder': 'nom categorie'}}) }}
                        
                      
                      </div>
                    </div>
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer">
                  {{form_label(form.save,"Ajouter")}}
                    {{ form_widget(form.name, {'attr': {'class': 'btn btn-info'},'attr': {'placeholder': 'nom categorie'}}) }}

                   
                    <button type="submit" class="btn btn-default float-right">Fermer</button>
                  </div>
                  <!-- /.card-footer -->
                </form>
              </div>
              {{form_end(form)}}
              <!-- /.card -->
  
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
              
{% endblock %}